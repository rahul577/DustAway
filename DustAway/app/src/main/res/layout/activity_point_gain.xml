<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:squint="http://schemas.android.com/squint"
    tools:context="com.example.akshay.dustaway.PointGainActivity">


    <com.intrusoft.squint.DiagonalView
        android:id="@+id/diagonal"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:scaleType="centerCrop"
        android:src="@drawable/aks"
        squint:diagonalDirection="bottom_to_top"
        squint:angle="12"
        squint:gravity="right" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Akshay Kumar"
        android:textSize="24dp"
        android:textColor="#000"
        tools:layout_editor_absoluteX="214dp"
        tools:layout_editor_absoluteY="208dp" />

    <TextView
        android:id="@+id/pointtextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="po"
        tools:layout_editor_absoluteX="298dp"
        tools:layout_editor_absoluteY="245dp" />


</android.support.constraint.ConstraintLayout>
